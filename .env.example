# ==================================================
# CONFIGURACIÓN DE SEGURIDAD
# ==================================================

# SECRET_KEY de Django (genérala con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=django-insecure-change-this-in-production

# DEBUG mode (NUNCA cambiar a True en producción)
# Valores: True o False
DEBUG=False

# Hosts permitidos (separados por comas)
# En desarrollo: localhost,127.0.0.1
# En producción: mi-dominio.com,www.mi-dominio.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================================================
# CONFIGURACIÓN HTTPS/SEGURIDAD (Producción)
# ==================================================

# Redirigir HTTP a HTTPS (solo en producción con HTTPS configurado)
SECURE_SSL_REDIRECT=False

# Hacer cookies de sesión solo accesibles vía HTTPS
SESSION_COOKIE_SECURE=False

# Hacer cookie CSRF solo accesible vía HTTPS
CSRF_COOKIE_SECURE=False

# HSTS: fuerza HTTPS en navegadores del cliente (segundos)
# Probar en staging primero; 0 = deshabilitado
SECURE_HSTS_SECONDS=0

# Incluir subdomains en HSTS
SECURE_HSTS_INCLUDE_SUBDOMAINS=False

# Permitir preload en el registro HSTS de navegadores
SECURE_HSTS_PRELOAD=False

# ==================================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==================================================

DB_NAME=flota_db
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# ==================================================
# CONFIGURACIÓN DE EMAIL (GMAIL)
# ==================================================

# Tu correo de Gmail
EMAIL_HOST_USER=tu_correo@gmail.com

# Contraseña de aplicación de Gmail (NO tu contraseña normal)
# Para generar una contraseña de aplicación:
# 1. Ve a tu cuenta de Google: https://myaccount.google.com/
# 2. Seguridad → Verificación en 2 pasos (debe estar activada)
# 3. Contraseñas de aplicaciones
# 4. Selecciona "Correo" y "Windows Computer" (o el que uses)
# 5. Copia la contraseña de 16 caracteres que se genera
EMAIL_HOST_PASSWORD=tu_contraseña_de_aplicacion
